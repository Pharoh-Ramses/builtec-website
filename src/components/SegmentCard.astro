---
export interface SegmentProps {
  title: string;
  description: string;
  link: string;
  image: string;
}
const { title, description, link, image } = Astro.props as SegmentProps;
---
<div class="p-4 border rounded shadow-sm">
  <img src={image} alt={title} class="w-full h-40 object-cover" />
  <h3 class="text-xl font-bold mt-4">{title}</h3>
  <p class="text-gray-600 mt-2">{description}</p>
  <a href={link} class="text-blue-500 mt-4 inline-block">Learn More</a>
</div>

