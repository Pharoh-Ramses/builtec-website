---

const services = [
    {
        title: 'Structural Steel',
        description: 'Complete structural steel detailing, fabrication, and erection for commercial and industrial buildings.'
    },
    {
        title: 'Custom Solutions',
        description: 'Specialized steel fabrication including walkways, canopies, mezzanines, and custom steel structures.'
    },
    {
        title: 'Installation Services',
        description: 'Professional installation of steel roof and floor deck, steel joists, and millwright solutions.'
    }
];
---

<section class="mb-20">
    <h2 class="text-3xl font-bold text-slate-900 mb-8">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-6">
        {services.map((service) => (
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h3 class="text-xl font-semibold mb-4 text-slate-900">{service.title}</h3>
                    <p class="text-gray-700">{service.description}</p>
                </div>
        ))}
    </div>
</section>