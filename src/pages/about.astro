---
// src/pages/about.astro
import "../styles/globals.css";
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
import Hero from '../components/about/Hero.astro';
import Story from '../components/about/Story.astro';
import Services from '../components/about/Services.astro';
import Projects from '../components/about/Projects.astro';
import Features from '../components/about/Features.astro';
import ContactCTA from '../components/about/ContactCTA.astro';
---

<DefaultLayout>
    <Header client:load slot="header" />

    <div class="min-h-screen bg-gray-50">
        <Hero />
        <div class="max-w-7xl mx-auto px-4 py-12">
            <Story />
            <Services />
            <Projects />
            <Features />
            <ContactCTA />
        </div>
    </div>

    <Footer slot="footer" />
</DefaultLayout>
