---
import '../styles/globals.css';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Header from '../components/Header.tsx';
import Footer from '../components/Footer.tsx';
---

<DefaultLayout>
    <Header slot="header" />

    <div class="min-h-[70vh] flex items-center justify-center px-4">
        <div class="text-center">
            <h1 class="text-6xl font-bold text-slate-900 mb-4">404</h1>
            <p class="text-2xl text-slate-700 mb-8">Page Not Found</p>
            <p class="text-slate-600 mb-8 max-w-md mx-auto">
                Sorry, we couldn't find the page you're looking for or it is under construction. Please check the URL or head back to the homepage.
            </p>
            <a
                    href="/"
                    class="inline-block bg-slate-900 text-white px-8 py-3 rounded-lg font-medium hover:bg-slate-800 transition-colors"
            >
                Back to Homepage
            </a>
        </div>
    </div>

    <Footer slot="footer" />
</DefaultLayout>
