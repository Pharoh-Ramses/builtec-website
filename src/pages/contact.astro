---
import "../styles/globals.css";
import DefaultLayout from '../layouts/DefaultLayout.astro';
import { ContactForm } from '../components/ContactForm';
---

<DefaultLayout title="Contact Us - Builtec">
  <main class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-8">Contact Us</h1>
      
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <div class="space-y-6">
          <h2 class="text-2xl font-semibold">Get in Touch</h2>
          <p class="text-gray-600">
            Have questions about our services? We're here to help. Fill out the form or reach out to us through any of the following channels.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start space-x-4">
              <div class="mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium">Phone</h3>
                <p class="text-gray-600">+1 972-632-7507</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium">Email</h3>
                <p class="text-gray-600">info@builtec.com</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium">Address</h3>
                <p class="text-gray-600">8522 State Hwy 121<br />Trenton, TX 75490</p>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <ContactForm client:load />
        </div>
      </div>
      
      <div class="mt-16">
        <h2 class="text-2xl font-semibold text-center mb-8">Business Hours</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div class="p-4 bg-gray-50 rounded-lg">
            <p class="font-medium">Monday - Friday</p>
            <p class="text-gray-600">9:00 AM - 6:00 PM</p>
          </div>
          <div class="p-4 bg-gray-50 rounded-lg">
            <p class="font-medium">Saturday</p>
            <p class="text-gray-600">10:00 AM - 4:00 PM</p>
          </div>
          <div class="p-4 bg-gray-50 rounded-lg">
            <p class="font-medium">Sunday</p>
            <p class="text-gray-600">Closed</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</DefaultLayout> 